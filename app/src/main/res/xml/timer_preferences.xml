<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_sound"
        android:title="enable sound"
        android:summaryOff="sound disable"
        android:summaryOn="sound disable" />

    <ListPreference
        android:title="Timer Melody"
        android:key="timer_melody"
        android:defaultValue="true"
        android:entries="@array/preference_timer_melody"
        android:entryValues="@array/preference_timer_melody_value" />
</PreferenceScreen>